{
  "extends": "../base/tsconfig.strict.json",

  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
  },

  "exclude": ["./node_modules/**/*", "./build/**/*"]
}
